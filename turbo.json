{
  "$schema": "https://turbo.build/schema.json",
  "daemon": false,
  "globalEnv": [
    "CI"
  ],
  "tasks": {
    "start": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "^build",
        "infra:start"
      ]
    },
    "infra:start": {
      "cache": false
    },
    "infra:stop": {
      "cache": false
    },
    "infra:destroy": {
      "cache": false
    },
    "build": {
      "cache": false,
      "dependsOn": [
        "generate-client",
        "generate-model",
        "^build"
      ],
      "outputs": [
        "dist"
      ]
    },
    "generate-model": {
      "cache": false,
      "dependsOn": [
        "^generate-model"
      ]
    },
    "generate-client": {
      "cache": false,
      "dependsOn": [
        "^generate-client"
      ]
    },
    "clean-generated": {
      "dependsOn": [
        "^clean-generated"
      ]
    },
    "test": {
      "dependsOn": [
        "build",
        "^test",
        "test:integration",
        "test:api"
      ]
    },
    "test:integration": {
      "dependsOn": [
        "build",
        "^test:integration"
      ],
      "cache": false
    },
    "test:api": {
      "dependsOn": [
        "build",
        "^test:api"
      ],
      "cache": false
    },
    "check": {
      "dependsOn": [
        "generate-client",
        "generate-model",
        "^build",
        "^check"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "cache": false
    },
    "lint:autofix": {
      "dependsOn": [
        "^lint:autofix"
      ],
      "cache": false
    },
    "format:check": {
      "dependsOn": [
        "^format:check"
      ],
      "cache": false
    },
    "format:write": {
      "dependsOn": [
        "^format:write"
      ]
    }
  },
  "globalDependencies": [
    "tsconfig.json"
  ]
}